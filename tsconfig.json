{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "out",
    "target": "esnext",
    "noImplicitAny": false,
    "sourceMap": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "esModuleInterop": true
  }
}
